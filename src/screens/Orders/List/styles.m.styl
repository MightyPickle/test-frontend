@import '../../../common.styl'

.screen
  margin 0 auto
  width 80%
  background white
  padding 3rem
  display flex 
  flex-direction column
  gap 1rem


.screenWrapper
  width 100%
  height 100vh
  overflow auto

.table
  color blue

.head
  grid-row 1


.row
  display grid
  grid-template-columns repeat(5, 1fr)
 
.body
  div 
    display grid
    grid-template-columns repeat(5, 1fr)
  
.pagination
  display flex
  justify-content center
  gap .5rem